<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.MainPage"
             BackgroundColor="#8d99ae">
    <Shell.TitleView>
        <Grid>
            <Label Style="{StaticResource TopBar}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Re-" TextColor="White"/>
                            <Span Text="Books" TextColor="#5383d3"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
        </Grid>
    </Shell.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="LogoutClick">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FAS" Glyph="{StaticResource logout}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ScrollView>
            <StackLayout x:Name="Container">
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
